{
  "manifest_version": 2,

  "name": "Requests Analyzer",
  "description": "Inspect and modify the requests going on in the background",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}